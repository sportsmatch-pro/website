---
export interface Props {
  currentLang?: string;
}

const { currentLang = "es-ES" } = Astro.props;

const deportes = [
  {
    nombre: "Fútbol",
    color: "#22c55e",
    imagen: "https://assets.sportsmatch.app/sport/choice-soccer.png",
  },
  {
    nombre: "Baloncesto",
    color: "#f97316",
    imagen: "https://assets.sportsmatch.app/sport/choice-basketball.png",
  },
  {
    nombre: "Hockey",
    color: "#eab308",
    imagen: "https://assets.sportsmatch.app/sport/choice-roller-hockey.png",
  },
  {
    nombre: "Fútbol sala",
    color: "#3b82f6",
    imagen: "https://assets.sportsmatch.app/sport/choice-futsal.png",
  },
  {
    nombre: "Voleibol",
    color: "#ec4899",
    imagen: "https://assets.sportsmatch.app/sport/choice-volleyball.png",
  },
  {
    nombre: "Balonmano",
    color: "#7c3aed",
    imagen: "https://assets.sportsmatch.app/sport/choice-handball.png",
  },
];

const translations = {
  "es-ES": {
    title: "¿Cuál es tu deporte?",
    subtitle:
      "<b>SPORTSMATCH</b> te permite registrarte en cualquiera de estos deportes.",
    downloadText: "Descarga la app y comienza tu viaje.",
  },
  "ca-ES": {
    title: "Quin és el teu esport?",
    subtitle:
      "<b>SPORTSMATCH</b> et permet registrar-te en qualsevol d'aquests esports.",
    downloadText: "Descarrega l'app i comença el teu viatge.",
  },
  en: {
    title: "Which is your sport?",
    subtitle:
      "<b>SPORTSMATCH</b> allows you to register in one of these sports.",
    downloadText: "Download the app and start your journey.",
  },
};

const t =
  translations[currentLang as keyof typeof translations] ||
  translations["es-ES"];
---

<section
  class="w-screen flex flex-col items-center justify-center bg-white py-20 gap-20"
>
  <div class="flex flex-col items-center justify-center gap-2">
    <h2 class="text-6xl font-bold text-center text-gray-900">
      {t.title}
    </h2>

    <p class="text-xl text-center text-gray-600" set:html={t.subtitle} />
  </div>

  <div class="grid grid-cols-2 gap-8 sm:flex sm:flex-wrap sm:justify-center">
    {
      deportes.map((deporte) => (
        <div class="text-center">
          <div class="w-40 h-40 mx-auto mb-4 relative hover:scale-110 transition-transform cursor-pointer">
            <img
              src={deporte.imagen}
              alt={deporte.nombre}
              class="absolute inset-0 w-full h-full object-cover rounded-full"
            />
          </div>
          <h3 class="text-xl font-semibold text-gray-800">{deporte.nombre}</h3>
        </div>
      ))
    }
  </div>

  <p class="text-2xl font-bold max-w-3xl text-center text-gray-900">
    {t.downloadText}
  </p>
</section>
