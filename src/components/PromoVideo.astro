---
export interface Props {
  currentLang?: string;
}

const { currentLang = "es-ES" } = Astro.props;
---

<section class="w-screen relative group" style={{ aspectRatio: "16/9" }}>
  <video
    id="promo-video"
    src="/assets/videosport.mp4"
    class="w-full h-full object-cover"
    autoplay
    loop
    muted
    playsinline></video>

  <!-- Botó Play/Pause centrat -->
  <button
    id="play-pause-btn"
    class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-30 hover:bg-opacity-50 transition-all group-hover:opacity-100 opacity-0 cursor-pointer"
    aria-label="Play/Pause"
    aria-pressed="true"
  >
    <svg
      id="play-icon"
      class="w-20 h-20 text-white"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="M8 5v14l11-7z"></path>
    </svg>
    <svg
      id="pause-icon"
      class="w-20 h-20 text-white hidden"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"></path>
    </svg>
  </button>

  <!-- Botó Mute/Unmute a la dreta inferior -->
  <button
    id="mute-btn"
    class="absolute bottom-4 right-4 p-3 bg-black bg-opacity-50 hover:bg-opacity-70 rounded-full transition-all cursor-pointer"
    aria-label="Mute/Unmute"
    aria-pressed="true"
  >
    <svg
      id="mute-icon"
      class="w-6 h-6 text-white"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"
      ></path>
    </svg>
    <svg
      id="unmute-icon"
      class="w-6 h-6 text-white hidden"
      fill="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"
      ></path>
    </svg>
  </button>
</section>

<script>
  const video = document.getElementById(
    "promo-video"
  ) as HTMLVideoElement | null;
  const playPauseBtn = document.getElementById("play-pause-btn");
  const muteBtn = document.getElementById("mute-btn");
  const playIcon = document.getElementById("play-icon");
  const pauseIcon = document.getElementById("pause-icon");
  const muteIcon = document.getElementById("mute-icon");
  const unmuteIcon = document.getElementById("unmute-icon");

  if (
    video &&
    playPauseBtn &&
    muteBtn &&
    playIcon &&
    pauseIcon &&
    muteIcon &&
    unmuteIcon
  ) {
    // Inicialitzar estats ARIA basats en l'estat inicial del video
    // Video comença amb autoplay (playing), però el botó comença ocult (opacity-0)
    // Mantenir-lo com a "true" ja que quan sigui visible serà pel motiu que s'està reproduint
    playPauseBtn.setAttribute("aria-pressed", "true");
    // Video comença mutat
    muteBtn.setAttribute("aria-pressed", "true");

    // Toggle Play/Pause
    playPauseBtn.addEventListener("click", () => {
      if (video.paused) {
        video.play();
        playIcon.classList.add("hidden");
        pauseIcon.classList.remove("hidden");
        playPauseBtn.setAttribute("aria-pressed", "true");
      } else {
        video.pause();
        playIcon.classList.remove("hidden");
        pauseIcon.classList.add("hidden");
        playPauseBtn.setAttribute("aria-pressed", "false");
      }
    });

    // Actualitza icona quan el video es pausa automàticament
    video.addEventListener("pause", () => {
      playIcon.classList.remove("hidden");
      pauseIcon.classList.add("hidden");
      playPauseBtn.setAttribute("aria-pressed", "false");
    });

    video.addEventListener("play", () => {
      playIcon.classList.add("hidden");
      pauseIcon.classList.remove("hidden");
      playPauseBtn.setAttribute("aria-pressed", "true");
    });

    // Toggle Mute/Unmute
    muteBtn.addEventListener("click", () => {
      if (video.muted) {
        video.muted = false;
        muteIcon.classList.add("hidden");
        unmuteIcon.classList.remove("hidden");
        muteBtn.setAttribute("aria-pressed", "false");
      } else {
        video.muted = true;
        muteIcon.classList.remove("hidden");
        unmuteIcon.classList.add("hidden");
        muteBtn.setAttribute("aria-pressed", "true");
      }
    });

    // Mostra/amaga el botó de Play/Pause quan s'atura el cursor
    const section = playPauseBtn.closest("section");
    if (section) {
      section.addEventListener("mouseenter", () => {
        playPauseBtn.classList.remove("opacity-0");
      });

      section.addEventListener("mouseleave", () => {
        playPauseBtn.classList.add("opacity-0");
      });
    }
  }
</script>
