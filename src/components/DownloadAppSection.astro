---
export interface Props {
  currentLang?: string;
}

const { currentLang = "es-ES" } = Astro.props;

const translations = {
  "es-ES": {
    title: "Descarga la app de SportsMatch",
    subtitle: "Disponible en iOS y Android",
    downloadText: "Descargar ahora",
    appStoreText: "Descargar en App Store",
    playStoreText: "Disponible en Google Play",
  },
  "ca-ES": {
    title: "Descarrega l'app de SportsMatch",
    subtitle: "Disponible a iOS i Android",
    downloadText: "Descarregar ara",
    appStoreText: "Descarregar a App Store",
    playStoreText: "Disponible a Google Play",
  },
  en: {
    title: "Download the SportsMatch app",
    subtitle: "Available on iOS and Android",
    downloadText: "Download now",
    appStoreText: "Download on App Store",
    playStoreText: "Get it on Google Play",
  },
};

const t =
  translations[currentLang as keyof typeof translations] ||
  translations["es-ES"];
---

<section class="bg-gradient-to-r from-blue-600 to-purple-600 py-20">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <div class="mb-16">
      <h2 class="text-6xl font-bold text-white mb-6">
        {t.title}
      </h2>
      <p class="text-2xl text-blue-100">
        {t.subtitle}
      </p>
    </div>

    <div
      class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12"
    >
      <!-- App Store -->
      <div
        class="bg-black bg-opacity-20 rounded-2xl p-6 hover:bg-opacity-30 transition-all cursor-pointer"
      >
        <div class="text-6xl mb-4">üçé</div>
        <div class="text-white font-semibold text-lg">
          {t.appStoreText}
        </div>
      </div>

      <!-- Google Play -->
      <div
        class="bg-black bg-opacity-20 rounded-2xl p-6 hover:bg-opacity-30 transition-all cursor-pointer"
      >
        <div class="text-6xl mb-4">ü§ñ</div>
        <div class="text-white font-semibold text-lg">
          {t.playStoreText}
        </div>
      </div>
    </div>

    <div class="text-center">
      <button
        class="bg-white text-blue-600 px-12 py-4 rounded-lg text-xl font-bold hover:bg-gray-100 transition-colors duration-200"
      >
        {t.downloadText}
      </button>
    </div>
  </div>
</section>
