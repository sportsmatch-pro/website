---
import IconInstagram from "./IconInstagram.astro";
import IconTiktok from "./IconTiktok.astro";
import IconFacebook from "./IconFacebook.astro";
import IconLinkedin from "./IconLinkedin.astro";

export interface Props {
  currentLang?: string;
}

const { currentLang = "es-ES" } = Astro.props;

const translations = {
  "es-ES": {
    title: "Ya disponible en:",
    subtitle: "SÃ­guenos en:",
  },
  "ca-ES": {
    title: "Ja disponible en:",
    subtitle: "Segueix-nos en:",
  },
  en: {
    title: "Already available on:",
    subtitle: "Follow us on:",
  },
};

const t =
  translations[currentLang as keyof typeof translations] ||
  translations["es-ES"];
---

<section class="relative py-20">
  <!-- Imatge de fons -->
  <img
    src="/assets/player-17.jpg"
    alt="Jugador de SportsMatch"
    class="absolute inset-0 w-full h-full object-cover"
  />

  <!-- Overlay negre lleuger per a llegibilitat -->
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>

  <!-- Contingut -->
  <div class="relative max-w-6xl mx-auto px-4 text-center z-10">
    <div class="mb-16">
      <h2 class="text-6xl font-bold text-white mb-6">
        {t.title}
      </h2>
    </div>
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-8 mb-12"
    >
      <a
        target="_blank"
        href="https://apps.apple.com/app/sportsmatch/6741365151"
      >
        <img src="/assets/apple.svg" alt="App Store" class="h-14" />
      </a>
      <a
        target="_blank"
        href="https://play.google.com/store/apps/details?id=com.fersuter.sportsmatch"
      >
        <img src="/assets/google.svg" alt="Google Play" class="h-20" />
      </a>
    </div>
    <div class="mb-8">
      <p class="text-2xl text-white">
        {t.subtitle}
      </p>
    </div>
    <div class="flex flex-col md:flex-row items-center justify-center gap-4">
      <a target="_blank" href="https://www.instagram.com/sports.match.pro/">
        <IconInstagram width={55} height={55} color="#ffffff" />
      </a>
      <a target="_blank" href="https://www.tiktok.com/@sportsmatch_pro">
        <IconTiktok width={55} height={55} color="#ffffff" />
      </a>
      <a
        target="_blank"
        href="https://www.facebook.com/profile.php?id=100093952096508"
      >
        <IconFacebook width={55} height={55} color="#ffffff" />
      </a>
      <a target="_blank" href="https://www.linkedin.com/company/sportsmatchapp">
        <IconLinkedin width={55} height={55} color="#ffffff" />
      </a>
    </div>
  </div>
</section>
