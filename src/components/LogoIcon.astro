---
export interface Props {
  width?: number;
  height?: number;
  color?: string;
  secondaryColor?: string;
  responsive?: boolean;
  responsiveWidth?: string; // Percentatge (ej: "50%") o vw (ej: "25vw")
  responsiveMaxHeight?: string; // Percentatge (ej: "50%") o vh (ej: "25vh")
}

const {
  width = 200,
  height = 90,
  color = "#808080",
  secondaryColor = "#ffffff",
  responsive = false,
  responsiveWidth,
  responsiveMaxHeight,
} = Astro.props;

// Relació d'aspecte original: ~0.765 (80/61.711)
const aspectRatio = 80 / 61.711;
const finalWidth = responsive ? undefined : width;
const finalHeight = responsive ? undefined : height;

// Si és responsive i no hi ha responsiveWidth, utilitza 100%
const widthValue = responsive ? responsiveWidth || "100%" : undefined;
const maxHeightValue = responsiveMaxHeight
  ? `max-height: ${responsiveMaxHeight};`
  : "";
---

<svg
  preserveAspectRatio="xMidYMid meet"
  data-bbox="0 -0.004 80 61.711"
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 -0.004 80 61.711"
  height={finalHeight}
  width={finalWidth}
  style={responsive
    ? `width: ${widthValue}; height: auto; aspect-ratio: ${aspectRatio}; ${maxHeightValue}`
    : undefined}
  data-type="color"
  role="presentation"
  aria-hidden="true"
  aria-label=""
>
  <g>
    <path
      fill={color}
      d="m22.005 36.864-.296-.296L6.845 21.705 21.71 6.84 35.466 20.6l3.422-3.423L21.71-.003 0 21.704l35.467 35.473 3.422-3.43-16.884-16.884Z"
      data-color="1"></path>
    <path
      fill={color}
      d="m44.535 22.82-3.426 3.426L53.763 38.9l3.426-3.426-12.654-12.653Z"
      data-color="1"></path>
    <path
      fill={secondaryColor}
      d="m58.29-.004-15.55 15.55-2.735 2.736-1.772 1.765-4.218 4.225-11.19 11.19 3.422 3.423L58.29 6.842l14.863 14.864-12.128 12.127-8.725 8.725-8.139 8.14-7.586 7.586 3.43 3.423 3.422-3.423L80 21.705 58.29-.004Z"
      data-color="2"></path>
  </g>
</svg>
