---
import Layout from "../layouts/BaseLayout.astro";
import DeportesSlider from "../components/DeportesSlider.astro";
import TalentIntroSection from "../components/TalentIntroSection.astro";
import DeportesSelector from "../components/DeportesSelector.astro";
import SectionContactForm from "../components/SectionContactForm.astro";
import DownloadAppSection from "../components/DownloadAppSection.astro";

const currentLang = "es-ES";
---

<Layout
  title="SportsMatch - Tu sueño, a tu alcance"
  description="La primera red social que conecta jugadores y profesionales del deporte con clubes deportivos"
  currentLang={currentLang}
  showHeader={true}
  showFooter={true}
>
  <!-- Hero Section amb DeportesSlider -->
  <DeportesSlider />

  <!-- Secció principal amb TalentIntroSection -->
  <main class="relative w-full overflow-y-auto min-h-screen">
    <!-- Secció 1: Tu sueño, a tu alcance -->
    <div
      class="relative w-full min-h-screen flex flex-col justify-center px-0 sm:px-0 lg:px-0"
    >
      <TalentIntroSection
        title="Tu sueño,\na tu alcance"
        text="¿Crees que tienes potencial y sueñas con dar el salto al siguiente nivel? Crea tu perfil y comienza a mostrar tu talento subiendo videos y fotos de tus habilidades. Navega por las ofertas de clubes, inscríbete en ellas y haz Match con tu próximo club!"
        images={[
          "/assets/futsal1.png",
          "/assets/volei1.png",
          "/assets/balonmano1.png",
        ]}
        imagePosition="right"
        background="white"
        textColor="black"
      />
    </div>

    <!-- Secció 2: Encuentra a tu próxima estrella -->
    <div
      class="relative w-full min-h-screen flex flex-col justify-center px-0 sm:px-0 lg:px-0"
    >
      <TalentIntroSection
        title="Encuentra a tu\npróxima estrella"
        text="Si eres un club, un representante o una empresa de scouting, tienes la oportunidad de buscar, filtrar y encontrar tu próximo jugador o el profesional que necesitas. Navega, chatea, publica una oferta deportiva y haz Match con tu próxima estrella!"
        images={[
          "/assets/futbol1.png",
          "/assets/basket1.png",
          "/assets/hockey1.png",
        ]}
        imagePosition="left"
        background="black"
        textColor="white"
      />
    </div>

    <!-- Secció 3: Selector de deportes -->
    <div
      class="w-screen min-h-screen bg-[#0e1628] flex items-center justify-center"
    >
      <DeportesSelector currentLang={currentLang} />
    </div>
  </main>

  <!-- Secció de contacte -->
  <div class="mt-[-50px]">
    <SectionContactForm currentLang={currentLang} />
  </div>

  <!-- Secció de descàrrega de l'app -->
  <DownloadAppSection currentLang={currentLang} />
</Layout>
