---
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title: string;
  description?: string;
  currentLang?: string;
  showHeader?: boolean;
  showFooter?: boolean;
}

const {
  title,
  description,
  currentLang = "es-ES",
  showHeader = true,
  showFooter = true,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  currentLang={currentLang}
  showHeader={showHeader}
  showFooter={showFooter}
>
  <slot />
</BaseLayout>
